{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "What To Do",
  "version": "0.1.0",
  "identifier": "com.whattodo.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 390,
        "height": 790,
        "minWidth": 320,
        "minHeight": 568,
        "maxWidth": 500,
        "maxHeight": 1000,
        "resizable": true,
        "center": true,
        "fullscreen": false,
        "maximized": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "msi", "nsis"],
    "icon": [
      "icons/icon_512.png"
    ],
    "identifier": "com.whattodo.desktop",
    "publisher": "What To Do Team"
  }
}
